<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="triple_pendulum_arm">

    <!-- ============================================ -->
    <!-- MATERIAL DEFINITIONS                         -->
    <!-- ============================================ -->
    <material name="blue"><color rgba="0 0 0.8 1"/></material>
    <material name="red"><color rgba="0.8 0 0 1"/></material>
    <material name="green"><color rgba="0 0.8 0 1"/></material>
    <material name="orange"><color rgba="1.0 0.5 0 1"/></material>
    <material name="white"><color rgba="1 1 1 1"/></material>

    <!-- ============================================ -->
    <!-- WORLD LINK                                   -->
    <!-- ============================================ -->
    <link name="world"/>

    <!-- ============================================ -->
    <!-- SPHERE 1 (Base) + JOINT 1                   -->
    <!-- ============================================ -->
    <joint name="world_to_sphere1" type="fixed">
        <parent link="world"/>
        <child link="sphere_link_1"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <link name="sphere_link_1">
        <visual>
            <geometry><sphere radius="0.025"/></geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="joint_1" type="continuous">
        <parent link="sphere_link_1"/>
        <child link="cylinder_link_1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="cylinder_link_1">
        <visual>
            <geometry><cylinder radius="0.02" length="0.1"/></geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ============================================ -->
    <!-- SPHERE 2 + JOINT 2                          -->
    <!-- ============================================ -->
    <joint name="cylinder_1_to_sphere_2" type="fixed">
        <parent link="cylinder_link_1"/>
        <child link="sphere_link_2"/>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </joint>

    <link name="sphere_link_2">
        <visual>
            <geometry><sphere radius="0.025"/></geometry>
            <material name="green"/>
        </visual>
    </link>

    <joint name="joint_2" type="continuous">
        <parent link="sphere_link_2"/>
        <child link="cylinder_link_2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="cylinder_link_2">
        <visual>
            <geometry><cylinder radius="0.02" length="0.1"/></geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
    </link>

    <!-- ============================================ -->
    <!-- SPHERE 3 + JOINT 3                          -->
    <!-- ============================================ -->
    <joint name="cylinder_2_to_sphere_3" type="fixed">
        <parent link="cylinder_link_2"/>
        <child link="sphere_link_3"/>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </joint>

    <link name="sphere_link_3">
        <visual>
            <geometry><sphere radius="0.025"/></geometry>
            <material name="orange"/>
        </visual>
    </link>

    <joint name="joint_3" type="continuous">
        <parent link="sphere_link_3"/>
        <child link="cylinder_link_3"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="cylinder_link_3">
        <visual>
            <geometry><cylinder radius="0.02" length="0.1"/></geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

</robot>
